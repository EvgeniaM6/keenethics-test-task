{
  "compilerOptions": {
    "lib": ["es5", "es6", "DOM"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/websocket/models"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/*", "src/index.ts"],
  "lib": ["esnext"],
  "ts-node": {
    "esm": true
  }
}